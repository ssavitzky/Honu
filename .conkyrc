# It would be nice if we could use conditionals here, but they only work in
# text.  Same for shell variables.

alignment top_right
background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
color1 gray
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
# This appears to break $font, but it looks better.
use_xft yes
xftfont DejaVu Sans Mono:size=12
gap_x 5
gap_y 40
minimum_size 5 5
net_avg_samples 2
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_transparent yes
own_window_type desktop
short_units yes
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

TEXT
$alignc$color${time %a %F %H:%M}$font
$hr
$nodename_short   ${color1}Up:$color $uptime_short$alignr${color1}User:$color $USER
${color1}RAM:$color $mem/$memmax $memperc% ${membar 8}
${color1}Swap:$color $swap/$swapmax $swapperc% ${swapbar 8}
${color1}CPU:$color $cpu% ${cpubar 8}
${color1}Avg:$color $loadavg  \
${color1}Procs:$color $running_processes/$processes
${loadgraph 30 0044ff ff4400 -l -t}
${color1}File systems:\
 ${if_mounted /mirror}$alignr mirror$color mounted$endif$color1
 /  $color${fs_used /}/${fs_size /} ${fs_free_perc /}% ${fs_bar 6 /}
${if_mounted /home}${color1}\
 ~  $color${fs_used /home}/${fs_size /home} ${fs_free_perc /home}% ${fs_bar 6 /home}
$endif\
${if_mounted /vv}${color1}\
 vv $color${fs_used /vv}/${fs_size /vv} ${fs_free_perc /vv}% ${fs_bar 6 /vv}
$endif\
$hr
${color1}Name              PID   CPU%   MEM%
${color lightgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${color lightgrey} ${top name 5} ${top pid 5} ${top cpu 5} ${top mem 5}
