#!/bin/sh
#  cptree src dst
#
# 	copy a directory tree (on the same machine)
# 	STAY ON ONE FILE SYSTEM (tar -cl)

if [ -z "$2" ]; then
    echo usage: $0 src dst
    echo "    " copy a tree quickly using tar -cl
    exit
fi
[! -e $2] || mkdir -p $2
(cd $1; tar --exclude=lost+found clf - .) | (cd $2; tar xvpBf -)
